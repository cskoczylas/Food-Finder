
public class Requester 
{
	
	//API Key: AIzaSyCUwb8Nn9rm4eAAfiZFHED5bhC2_s8ZiB8
	//Example Request URL: https://maps.googleapis.com/maps/api/geocode/json?address=1600+Amphitheatre+Parkway,+Mountain+View,+CA&key=YOUR_API_KEY
			
	public static String APIkey = "AIzaSyCUwb8Nn9rm4eAAfiZFHED5bhC2_s8ZiB8";
	
	public String[] address; // string array set-up: [street address, state, zipcode]
	public static String[] templateURL = new String[6]; //contains parts of the final request URL that will be concatenated together
	
	public static void main(String[] args)
	{
		
		templateURL[0] = "https://maps.googleapis.com/maps/api/geocode/"; //beginning of the URL
		templateURL[1] = "json"; //output format, we'll be using JSON but it can also be XML
		templateURL[2] = "?address=";
		templateURL[3] = ""; //put the address here (spaces replaced by +'s)
		templateURL[4] = "&key=";
		templateURL[5] = APIkey; //put the API key here
		
		//Test Health Store
		String[] testHealth = new String[3];
		testHealth[0] = "14100 Lee Hwy Centreville";
		testHealth[1] = "VA";
		testHealth[2] = "20120";
		System.out.println(createURLHealth(testHealth));
		
		//Test Junk Store
		String[] testJunk= new String[5];
		testJunk[0] = "39.32031";
		testJunk[1] = "-120.20873";
		testJunk[2] = "11355 Deerfield Dr";
		testJunk[3] = "Truckee";
		testJunk[4] = "CA";
		System.out.println(createURLJunk(testJunk));
		
		//Test Address and ZIP Code Inputs
		System.out.println(createURLfromAddress("14100 Lee Hwy Centreville"));
		System.out.println(createURLfromZip("06078"));
		
		//Get the data from Google Maps about the location
		HttpsClient client = new HttpsClient();
		client.SendRequest(createURLHealth(testHealth));
		client.SendRequest(createURLJunk(testJunk));
		client.SendRequest(createURLfromAddress("14100 Lee Hwy Centreville"));
		client.SendRequest(createURLfromZip("06078"));
		
		
		
	}
	
	public static String createURLJunk(String[] address)
	{
		String lat, lon, strtAddress, city, state, tempAddress, output;
		lat = address[0];
		lon = address[1];
		strtAddress= address[2];
		city = address[3];
		state = address[4];
		
		tempAddress = lat + ", " + lon + ", " + strtAddress + ", " + city + ", " + state;
		tempAddress = tempAddress.replace(" ", "+");
		output = templateURL[0] + templateURL[1] + templateURL[2] + tempAddress + templateURL[4] + templateURL[5];
		
		return output;	
	}
	
	public static String createURLHealth(String[] address)
	{
		String strtAddress, state, zip, tempAddress, output;
		strtAddress = address[0];
		state = address[1];
		zip = address[2];
		
		tempAddress = strtAddress + ", " + state + ", " + zip;
		tempAddress = tempAddress.replace(" ", "+");
		output = templateURL[0] + templateURL[1] + templateURL[2] + tempAddress + templateURL[4] + templateURL[5];
		
		return output;	
	}
	
	public static String createURLfromZip(String input)
	{
		String output;
		
		if(verifyZip(input))
		{
			output = templateURL[0] + templateURL[1] + templateURL[2] + input + templateURL[4] + templateURL[5];
			return output;
		}
		else
		{
			System.out.println("The input was not a valid ZIP code. "); //pop up an error message saying input is not zip code
			return null;
		}
	}
	
	public static String createURLfromAddress(String input)
	{
		input = input.replace(" ", "+");
		String output = templateURL[0] + templateURL[1] + templateURL[2] + input + templateURL[4] + templateURL[5];
		return output;
	}
	
	public static boolean verifyZip(String input)
	{
		if(input.length()==5 && input.matches("[0-9]+"))
		{
			return true;
		}
		return false;
	}
	
}
